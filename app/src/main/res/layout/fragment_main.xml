<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivityFragment"
    android:backgroundTint="@android:color/background_dark"
    android:background="@android:color/darker_gray"
    >

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_label_check_all_apis"
        android:id="@+id/btn_check_all_apis"
        android:onClick="checkAllAPIs"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/btn_copy_image"
        android:layout_toStartOf="@+id/btn_copy_image" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_copy_image"
        android:id="@+id/btn_copy_image"
        android:onClick="copyFileFromAssetsToAppDataPath"
        android:layout_alignTop="@+id/btn_check_all_apis"
        android:layout_alignRight="@+id/scrl_main"
        android:layout_alignEnd="@+id/scrl_main" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_copy_image_inaccessible_path"
        android:id="@+id/btn_copy_to_invalid_path"
        android:onClick="copyFileFromAssetsToInaccessiblePath"
        android:layout_below="@+id/btn_check_all_apis"
        android:layout_alignRight="@+id/scrl_main"
        android:layout_alignEnd="@+id/scrl_main"
        android:layout_alignLeft="@+id/btn_copy_image"
        android:layout_alignStart="@+id/btn_copy_image" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_action_open_document"
        android:id="@+id/btn_action_open_document"
        android:onClick="checkOpenDocumentAction"
        android:layout_alignBottom="@+id/btn_copy_to_invalid_path"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/btn_copy_to_invalid_path"
        android:layout_toStartOf="@+id/btn_copy_to_invalid_path" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_copy_to_pictures"
        android:id="@+id/btn_copy_to_pictures_path"
        android:onClick="copyFileFromAssetsToPicturesPath"
        android:layout_below="@+id/btn_copy_to_invalid_path"
        android:layout_alignRight="@+id/scrl_main"
        android:layout_alignEnd="@+id/scrl_main"
        android:layout_alignLeft="@+id/btn_copy_to_invalid_path"
        android:layout_alignStart="@+id/btn_copy_to_invalid_path" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_clear_results"
        android:id="@+id/button"
        android:onClick="clearResults"
        android:layout_below="@+id/btn_copy_to_pictures_path"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <ScrollView
        android:id="@+id/scrl_main"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#fffffeca">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/result_linear_layout"
            android:orientation="vertical">

        </LinearLayout>
    </ScrollView>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_copy_to_dirs"
        android:id="@+id/btn_copy_to_dirs"
        android:onClick="copyFiletoDirs"
        android:layout_below="@+id/btn_copy_to_pictures_path"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/btn_copy_to_pictures_path"
        android:layout_alignStart="@+id/btn_copy_to_pictures_path" />

</RelativeLayout>
